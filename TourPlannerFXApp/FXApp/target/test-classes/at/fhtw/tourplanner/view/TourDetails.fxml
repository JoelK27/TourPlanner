<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.web.WebView?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.fhtw.tourplanner.view.TourDetailsController"
      spacing="15">
    <styleClass>
        <String fx:value="tour-details-container" />
    </styleClass>
    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>
    
    <!-- HEADER MIT TITEL -->
    <VBox spacing="5">
        <styleClass>
            <String fx:value="header-section" />
        </styleClass>
        <Label fx:id="tourTitleLabel" text="Select a Tour">
            <styleClass>
                <String fx:value="tour-title" />
            </styleClass>
        </Label>
        <Separator />
    </VBox>

    <!-- HAUPTINHALT MIT TABS -->
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <styleClass>
            <String fx:value="modern-tab-pane" />
        </styleClass>
        
        <!-- ===== TOUR DETAILS TAB ===== -->
        <Tab text="ðŸ“‹ Tour Details">
            <styleClass>
                <String fx:value="details-tab" />
            </styleClass>
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                <styleClass>
                    <String fx:value="details-scroll-pane" />
                </styleClass>
                <VBox spacing="20">
                    <padding>
                        <Insets top="20" right="15" bottom="20" left="15"/>
                    </padding>

                    <!-- BASIC INFO SECTION -->
                    <VBox spacing="15">
                        <styleClass>
                            <String fx:value="form-section" />
                        </styleClass>
                        <Label text="âœï¸ Basic Information">
                            <styleClass>
                                <String fx:value="section-title" />
                            </styleClass>
                        </Label>
                        
                        <GridPane hgap="15" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="120" prefWidth="120" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            
                            <Label text="Tour Name:" GridPane.rowIndex="0" GridPane.columnIndex="0">
                                <styleClass>
                                    <String fx:value="field-label" />
                                </styleClass>
                            </Label>
                            <TextField fx:id="nameField" promptText="Enter tour name..." 
                                     GridPane.rowIndex="0" GridPane.columnIndex="1">
                                <styleClass>
                                    <String fx:value="modern-text-field" />
                                </styleClass>
                            </TextField>

                            <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0">
                                <styleClass>
                                    <String fx:value="field-label" />
                                </styleClass>
                            </Label>
                            <TextArea fx:id="descriptionArea" prefRowCount="3" wrapText="true"
                                    promptText="Describe your tour..." 
                                    GridPane.rowIndex="1" GridPane.columnIndex="1">
                                <styleClass>
                                    <String fx:value="modern-text-area" />
                                </styleClass>
                            </TextArea>
                        </GridPane>
                    </VBox>

                    <!-- ROUTE SECTION -->
                    <VBox spacing="15">
                        <styleClass>
                            <String fx:value="form-section" />
                        </styleClass>
                        <Label text="ðŸ—ºï¸ Route Information">
                            <styleClass>
                                <String fx:value="section-title" />
                            </styleClass>
                        </Label>
                        
                        <GridPane hgap="15" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="120" prefWidth="120" />
                                <ColumnConstraints hgrow="ALWAYS" />
                                <ColumnConstraints hgrow="NEVER" minWidth="120" prefWidth="120" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            
                            <Label text="From:" GridPane.rowIndex="0" GridPane.columnIndex="0">
                                <styleClass>
                                    <String fx:value="field-label" />
                                </styleClass>
                            </Label>
                            <TextField fx:id="fromField" promptText="Starting location..." 
                                     GridPane.rowIndex="0" GridPane.columnIndex="1">
                                <styleClass>
                                    <String fx:value="modern-text-field" />
                                </styleClass>
                            </TextField>

                            <Label text="To:" GridPane.rowIndex="0" GridPane.columnIndex="2">
                                <styleClass>
                                    <String fx:value="field-label" />
                                </styleClass>
                            </Label>
                            <TextField fx:id="toField" promptText="Destination..." 
                                     GridPane.rowIndex="0" GridPane.columnIndex="3">
                                <styleClass>
                                    <String fx:value="modern-text-field" />
                                </styleClass>
                            </TextField>

                            <Label text="Transport:" GridPane.rowIndex="1" GridPane.columnIndex="0">
                                <styleClass>
                                    <String fx:value="field-label" />
                                </styleClass>
                            </Label>
                            <ChoiceBox fx:id="transportTypeChoice" maxWidth="Infinity"
                                     GridPane.rowIndex="1" GridPane.columnIndex="1">
                                <styleClass>
                                    <String fx:value="modern-choice-box" />
                                </styleClass>
                            </ChoiceBox>

                            <Label text="Distance:" GridPane.rowIndex="1" GridPane.columnIndex="2">
                                <styleClass>
                                    <String fx:value="field-label" />
                                </styleClass>
                            </Label>
                            <TextField fx:id="distanceField" promptText="km" 
                                     GridPane.rowIndex="1" GridPane.columnIndex="3">
                                <styleClass>
                                    <String fx:value="modern-text-field" />
                                </styleClass>
                            </TextField>

                            <Label text="Est. Time:" GridPane.rowIndex="2" GridPane.columnIndex="0">
                                <styleClass>
                                    <String fx:value="field-label" />
                                </styleClass>
                            </Label>
                            <TextField fx:id="estimatedTimeField" promptText="hours" 
                                     GridPane.rowIndex="2" GridPane.columnIndex="1">
                                <styleClass>
                                    <String fx:value="modern-text-field" />
                                </styleClass>
                            </TextField>
                        </GridPane>
                    </VBox>

                    <!-- MAP SECTION -->
                    <VBox spacing="10">
                        <styleClass>
                            <String fx:value="map-section" />
                        </styleClass>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ—ºï¸ Route Map">
                                <styleClass>
                                    <String fx:value="section-title" />
                                </styleClass>
                            </Label>
                            <Region HBox.hgrow="ALWAYS" />
                            <Button fx:id="calculateRouteButton" text="ðŸ”„ Calculate Route" 
                                   onAction="#onCalculateRoutePressed">
                                <styleClass>
                                    <String fx:value="primary-button" />
                                </styleClass>
                            </Button>
                        </HBox>
                        
                        <WebView fx:id="mapWebView" prefHeight="320" minHeight="250" maxHeight="400">
                            <styleClass>
                                <String fx:value="modern-map-view" />
                            </styleClass>
                        </WebView>
                    </VBox>

                    <!-- QUICK NOTES SECTION -->
                    <VBox spacing="10">
                        <styleClass>
                            <String fx:value="notes-section" />
                        </styleClass>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“ Quick Notes">
                                <styleClass>
                                    <String fx:value="section-title" />
                                </styleClass>
                            </Label>
                            <Region HBox.hgrow="ALWAYS" />
                            <Button fx:id="saveNotesButton" text="ðŸ’¾ Save" onAction="#onSaveNotesClicked">
                                <styleClass>
                                    <String fx:value="success-button" />
                                </styleClass>
                            </Button>
                            <Button text="ðŸ“‹ View All" onAction="#onShowAllNotesClicked">
                                <styleClass>
                                    <String fx:value="info-button" />
                                </styleClass>
                            </Button>
                        </HBox>
                        
                        <TextArea fx:id="quickNotesArea" prefRowCount="3" wrapText="true"
                                promptText="Add your personal notes about this tour...">
                            <styleClass>
                                <String fx:value="modern-text-area" />
                            </styleClass>
                        </TextArea>
                    </VBox>

                    <!-- ACTION BUTTONS -->
                    <HBox spacing="15" alignment="CENTER">
                        <styleClass>
                            <String fx:value="action-bar" />
                        </styleClass>
                        <Button text="ðŸ“Š Tour Stats" onAction="#onShowTourStatsClicked">
                            <styleClass>
                                <String fx:value="info-button" />
                            </styleClass>
                        </Button>
                        <Button text="ðŸ“„ Tour Report" onAction="#onSaveTourReportClicked">
                            <styleClass>
                                <String fx:value="secondary-button" />
                            </styleClass>
                        </Button>
                        <Button text="ðŸ“‹ Summary Report" onAction="#onSaveSummaryReportClicked">
                            <styleClass>
                                <String fx:value="secondary-button" />
                            </styleClass>
                        </Button>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button text="ðŸ’¾ Save Tour" onAction="#onSaveTourDetailsClicked">
                            <styleClass>
                                <String fx:value="primary-button-large" />
                            </styleClass>
                        </Button>
                    </HBox>
                </VBox>
            </ScrollPane>
        </Tab>

        <!-- ===== TOUR LOGS TAB ===== -->
        <Tab text="ðŸ“– Tour Logs">
            <styleClass>
                <String fx:value="logs-tab" />
            </styleClass>
            <SplitPane dividerPositions="0.35" VBox.vgrow="ALWAYS">
                <styleClass>
                    <String fx:value="modern-split-pane" />
                </styleClass>
                
                <!-- LOG LIST SIDE -->
                <VBox spacing="10">
                    <styleClass>
                        <String fx:value="log-list-panel" />
                    </styleClass>
                    <padding>
                        <Insets top="15" right="10" bottom="15" left="15"/>
                    </padding>
                    
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="ðŸ“ Log Entries">
                            <styleClass>
                                <String fx:value="panel-title" />
                            </styleClass>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button text="âž•" onAction="#onAddLogButtonPressed">
                            <styleClass>
                                <String fx:value="add-button-round" />
                            </styleClass>
                        </Button>
                        <Button text="âž–" onAction="#onDeleteLogButtonPressed">
                            <styleClass>
                                <String fx:value="delete-button-round" />
                            </styleClass>
                        </Button>
                    </HBox>
                    
                    <ListView fx:id="logListView" VBox.vgrow="ALWAYS">
                        <styleClass>
                            <String fx:value="modern-list-view" />
                        </styleClass>
                    </ListView>
                </VBox>

                <!-- LOG DETAILS SIDE -->
                <VBox spacing="15">
                    <styleClass>
                        <String fx:value="log-details-panel" />
                    </styleClass>
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="10"/>
                    </padding>

                    <Label text="ðŸ“‹ Log Details">
                        <styleClass>
                            <String fx:value="panel-title" />
                        </styleClass>
                    </Label>

                    <!-- DATE & TIME INFO -->
                    <HBox spacing="20">
                        <VBox spacing="5">
                            <styleClass>
                                <String fx:value="info-group" />
                            </styleClass>
                            <Label text="ðŸ“… Date:">
                                <styleClass>
                                    <String fx:value="info-label" />
                                </styleClass>
                            </Label>
                            <Label fx:id="logDateLabel" text="Not selected">
                                <styleClass>
                                    <String fx:value="info-value" />
                                </styleClass>
                            </Label>
                        </VBox>
                        
                        <VBox spacing="5">
                            <styleClass>
                                <String fx:value="info-group" />
                            </styleClass>
                            <Label text="ðŸ•’ Time:">
                                <styleClass>
                                    <String fx:value="info-label" />
                                </styleClass>
                            </Label>
                            <Label fx:id="logTimeLabel" text="Not selected">
                                <styleClass>
                                    <String fx:value="info-value" />
                                </styleClass>
                            </Label>
                        </VBox>
                    </HBox>

                    <!-- COMMENT SECTION -->
                    <VBox spacing="8">
                        <Label text="ðŸ’­ Comment:">
                            <styleClass>
                                <String fx:value="field-label" />
                            </styleClass>
                        </Label>
                        <TextArea fx:id="logCommentArea" prefRowCount="4" wrapText="true" 
                                VBox.vgrow="ALWAYS" promptText="Describe your experience...">
                            <styleClass>
                                <String fx:value="modern-text-area" />
                            </styleClass>
                        </TextArea>
                    </VBox>

                    <!-- LOG METRICS -->
                    <GridPane hgap="15" vgap="12">
                        <styleClass>
                            <String fx:value="metrics-grid" />
                        </styleClass>
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="100" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>

                        <Label text="ðŸŽ¯ Difficulty:" GridPane.rowIndex="0" GridPane.columnIndex="0">
                            <styleClass>
                                <String fx:value="field-label" />
                            </styleClass>
                        </Label>
                        <TextField fx:id="logDifficultyField" promptText="1-5" 
                                 GridPane.rowIndex="0" GridPane.columnIndex="1">
                            <styleClass>
                                <String fx:value="modern-text-field" />
                            </styleClass>
                        </TextField>

                        <Label text="ðŸ“ Distance:" GridPane.rowIndex="1" GridPane.columnIndex="0">
                            <styleClass>
                                <String fx:value="field-label" />
                            </styleClass>
                        </Label>
                        <TextField fx:id="logTotalDistanceField" promptText="km" 
                                 GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <styleClass>
                                <String fx:value="modern-text-field" />
                            </styleClass>
                        </TextField>

                        <Label text="â±ï¸ Duration:" GridPane.rowIndex="2" GridPane.columnIndex="0">
                            <styleClass>
                                <String fx:value="field-label" />
                            </styleClass>
                        </Label>
                        <TextField fx:id="logTotalTimeField" promptText="HH:MM:SS" 
                                 GridPane.rowIndex="2" GridPane.columnIndex="1">
                            <styleClass>
                                <String fx:value="modern-text-field" />
                            </styleClass>
                        </TextField>

                        <Label text="â­ Rating:" GridPane.rowIndex="3" GridPane.columnIndex="0">
                            <styleClass>
                                <String fx:value="field-label" />
                            </styleClass>
                        </Label>
                        <TextField fx:id="logRatingField" promptText="1-5 stars" 
                                 GridPane.rowIndex="3" GridPane.columnIndex="1">
                            <styleClass>
                                <String fx:value="modern-text-field" />
                            </styleClass>
                        </TextField>
                    </GridPane>

                    <!-- SAVE BUTTON -->
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <styleClass>
                            <String fx:value="log-action-bar" />
                        </styleClass>
                        <Button text="ðŸ’¾ Save Log Changes" onAction="#onUpdateLogButtonPressed">
                            <styleClass>
                                <String fx:value="primary-button" />
                            </styleClass>
                        </Button>
                    </HBox>
                </VBox>
            </SplitPane>
        </Tab>
    </TabPane>
</VBox>