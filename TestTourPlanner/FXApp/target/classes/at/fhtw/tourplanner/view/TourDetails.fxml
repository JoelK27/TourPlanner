<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.fhtw.tourplanner.view.TourDetailsController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <ToolBar>
        <Label text="Name"/>
        <TextField fx:id="nameTextField" HBox.hgrow="ALWAYS"/>
    </ToolBar>
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab text="Tour details">
            <VBox spacing="10">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
                <Label prefHeight="35.0" prefWidth="104.0" text="Tour Details" />
                <TextField fx:id="nameField" promptText="Tour name" />
                <TextArea fx:id="descriptionArea" prefHeight="62.0" prefWidth="473.0" promptText="Tour Description" />
                <TextField fx:id="fromField" promptText="From" />
                <TextField fx:id="toField" promptText="To" />
                <ChoiceBox fx:id="transportTypeChoice" prefHeight="25.0" prefWidth="472.0" maxWidth="Infinity" />
                <TextField fx:id="distanceField" promptText="Tour distance" />
                <TextField fx:id="estimatedTimeField" promptText="Estimated time" />
                <Label text="*Map Placeholder*" style="-fx-background-color: lightgray; -fx-alignment: center;"
                       VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" />
            </VBox>
        </Tab>
        <Tab text="Tour logs">
            <VBox spacing="10">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
                <ToolBar>
                    <Button text="+" onAction="#onAddLogButtonPressed"/>
                    <Button text="-" onAction="#onDeleteLogButtonPressed"/>
                    <Button text="Update" onAction="#onUpdateLogButtonPressed"/>
                </ToolBar>
                <TableView fx:id="logTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Date"/>
                        <TableColumn fx:id="timeColumn" text="Time"/>
                        <TableColumn fx:id="commentColumn" text="Comment"/>
                        <TableColumn fx:id="difficultyColumn" text="Difficulty"/>
                        <TableColumn fx:id="totalDistanceColumn" text="Total Distance"/>
                        <TableColumn fx:id="totalTimeColumn" text="Total Time"/>
                        <TableColumn fx:id="ratingColumn" text="Rating"/>
                    </columns>
                </TableView>
                <TextField fx:id="logCommentField" promptText="Comment"/>
                <TextField fx:id="logDifficultyField" promptText="Difficulty"/>
                <TextField fx:id="logTotalDistanceField" promptText="Total Distance"/>
                <TextField fx:id="logTotalTimeField" promptText="Total Time (HH:MM:SS)"/>
                <TextField fx:id="logRatingField" promptText="Rating"/>
            </VBox>
        </Tab>
    </TabPane>
</VBox>